@model TechReady.Portal.Models.LearningResourceFeed

@{
    ViewBag.Title = "Create";
}

<h2>Create</h2>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>LearningResourceFeed</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.PrimaryTechnologyID, "PrimaryTechnologyID", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("PrimaryTechnologyID", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.PrimaryTechnologyID, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.AudienceTypes, "AudienceTypeID", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.ListBox("AudienceTypeNames", (MultiSelectList)ViewBag.AudienceTypes, htmlAttributes: new { @rows = "10", @style = "width: 100%;", @class = "form-control" })
                @Html.ValidationMessageFor(model => model.AudienceTypes, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.LearningResourceTypeID, "LearningResourceTypeID", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("LearningResourceTypeID", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.LearningResourceTypeID, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.RSSLink, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.RSSLink, new { htmlAttributes = new { @class = "form-control" } })
                <span id="rssLinkValidation" class="text-danger" style="display : none">
                    RSS Link is required
                </span>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    <script type="text/javascript">
        $(function () {
            $("form").submit(function (e) {
                var rssLink = $("#RSSLink").val();
                if (rssLink == "") {
                    $("#rssLinkValidation").show();
                    e.preventDefault();
                }
            });

            $("#RSSLink").change(function () {
                $("#rssLinkValidation").hide();
            });
        });
    </script>
    }