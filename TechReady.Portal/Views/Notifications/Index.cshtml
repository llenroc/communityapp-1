            @Html.DisplayFor(modelItem => item.ResourceId)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ActionLink)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.NotificationTitle)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.NotificationMessage)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PushDateTime)
