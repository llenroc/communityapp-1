@model IEnumerable<TechReady.Portal.Models.Notification>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.TypeOfNotification)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ResourceId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ActionLink)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.NotificationTitle)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.NotificationMessage)
        </th>
        <th>
