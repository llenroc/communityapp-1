@model IEnumerable<TechReady.Portal.Models.City>

@{
    ViewBag.Title = "Index";
}

<h2>Cities</h2>

<p>
    @Html.ActionLink("Add a new city", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.CityName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.State)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Zone)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.CityName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.State)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Zone)
        </td>
        <td>
            @*@Html.ActionLink("Edit", "Edit", new { id=item.CityName }) |*@
            @*@Html.ActionLink("Details", "Details", new { id=item.CityName }) |*@
            @Html.ActionLink("Delete", "Delete", new { id=item.CityName })
        </td>
    </tr>
}

</table>
